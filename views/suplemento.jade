script(type='text/javascript')     
  $(document).ready(function() {
    var btn = $('#boton');
    var adj = $('#adjunto');
    adj.on('change', function () {
      var atr = btn.attr('disabled');
      if (atr && adj.val() != '') {
        btn.removeAttr('disabled');
        btn.removeClass('disabled')
      } else {
        btn.addClass('disabled')
        btn.attr('disabled', true);
      }
    })
  });

